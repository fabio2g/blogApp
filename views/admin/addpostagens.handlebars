{{#each erros }}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova postagem:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo" class="form-label">Título:</label>
            <input class="form-control" type="text" id="titulo" name="titulo" placeholder="Título da postagem">
            <label for="slug" class="form-label mt-2">Slug:</label>
            <input class="form-control" type="text" id="slug" name="slug" placeholder="Slug da categoria"> 
            <label for="descricao" class="form-label mt-2">Descrição:</label>
            <input class="form-control" type="text" id="descricao" name="descricao" placeholder="Descrição da postagem"> 
            <label for="categoria" class="form-label mt-2">Categoria:</label>
            <select class="form-select" name="categoria" id="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <label for="conteudo" class="form-label mt-2">Conteúdo:</label>
            <textarea class="form-control" name="conteudo" id="conteudo"></textarea>
            <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
        </form>
    </div>
</div>